APP_NAME = Gitea: Git with a cup of tea
RUN_MODE = prod

[database]
DB_TYPE = sqlite3
PATH    = integrations/gitea-integration-sqlite/gitea.db

[indexer]
ISSUE_INDEXER_PATH   = integrations/gitea-integration-sqlite/indexers/issues.bleve
