{{$indentStyle := (or .EditorconfigIndentStyle "space")}}
{{$indentSize := (or .EditorconfigIndentSize "4")}}
{{$treePath := (or .TreePath "")}}
<div class="editor-options tw-flex tw-gap-2">
	<div class="ui dropdown selection tw-min-w-0" data-tooltip-content="{{ctx.Locale.Tr "text_indent_style"}}">
		<select class="js-indent-style-select">
			<option{{if eq $indentStyle "space"}} selected{{end}} value="space">{{ctx.Locale.Tr "characters_spaces"}}</option>
			<option{{if eq $indentStyle "tab"}} selected{{end}} value="tab">{{ctx.Locale.Tr "characters_tabs"}}</option>
		</select>
		{{svg "octicon-triangle-down" 14 "dropdown icon"}}
		<div class="text">{{if eq $indentStyle "tab"}}{{ctx.Locale.Tr "characters_tabs"}}{{else}}{{ctx.Locale.Tr "characters_spaces"}}{{end}}</div>
		<div class="menu">
			<div class="item{{if eq $indentStyle "space"}} active selected{{end}}" data-value="space">{{ctx.Locale.Tr "characters_spaces"}}</div>
			<div class="item{{if eq $indentStyle "tab"}} active selected{{end}}" data-value="tab">{{ctx.Locale.Tr "characters_tabs"}}</div>
		</div>
	</div>
	<div class="ui dropdown selection tw-min-w-0" data-tooltip-content="{{ctx.Locale.Tr "text_indent_size"}}">
		<select class="js-indent-size-select">
			<option{{if eq $indentSize "2"}} selected{{end}} value="2">2</option>
			<option{{if eq $indentSize "4"}} selected{{end}} value="4">4</option>
			<option{{if eq $indentSize "8"}} selected{{end}} value="8">8</option>
		</select>
		{{svg "octicon-triangle-down" 14 "dropdown icon"}}
		<div class="text">{{$indentSize}}</div>
		<div class="menu">
			<div class="item{{if eq $indentSize "2"}} active selected{{end}}" data-value="2">2</div>
			<div class="item{{if eq $indentSize "4"}} active selected{{end}}" data-value="4">4</div>
			<div class="item{{if eq $indentSize "8"}} active selected{{end}}" data-value="8">8</div>
		</div>
	</div>
	{{$mode := (Iif (SliceUtils.Contains .LineWrapExtensions (PathExt $treePath)) "on" "off")}}
	<div class="ui dropdown selection tw-min-w-0" data-tooltip-content="{{ctx.Locale.Tr "text_line_wrap_mode"}}">
		<select class="js-line-wrap-select">
			<option{{if eq $mode "on"}} selected{{end}} value="on">{{ctx.Locale.Tr "text_line_wrap"}}</option>
			<option{{if eq $mode "off"}} selected{{end}} value="off">{{ctx.Locale.Tr "text_line_nowrap"}}</option>
		</select>
		{{svg "octicon-triangle-down" 14 "dropdown icon"}}
		<div class="text">{{if eq $mode "on"}}{{ctx.Locale.Tr "text_line_wrap"}}{{else}}{{ctx.Locale.Tr "text_line_nowrap"}}{{end}}</div>
		<div class="menu">
			<div class="item{{if eq $mode "on"}} active selected{{end}}" data-value="on">{{ctx.Locale.Tr "text_line_wrap"}}</div>
			<div class="item{{if eq $mode "off"}} active selected{{end}}" data-value="off">{{ctx.Locale.Tr "text_line_nowrap"}}</div>
		</div>
	</div>
</div>
