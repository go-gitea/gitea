<div class="field">
	{{template "repo/issue/fields/header" .}}
	{{$field := .}}
	{{range $i, $opt := .Attributes.options}}
		<div class="field">
			<div class="ui checkbox">
				<input type="checkbox" name="form-field-{{$field.ID}}-{{$i}}" {{if $opt.required}}readonly checked{{end}}>
				<label>{{$opt.label}}</label>
			</div>
		</div>
	{{end}}
</div>
