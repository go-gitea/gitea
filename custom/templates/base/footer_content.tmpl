<footer class="tw-w-full">
  <div class="tw-mx-auto tw-max-w-6xl tw-px-4 sm:tw-px-6 tw-border-t tw-border-neutral-100/10">
    <div class="tw-flex tw-flex-wrap tw-items-center tw-justify-center tw-gap-3 tw-py-10">
      
      <!-- Left: logo + copyright -->
      <div class="tw-flex tw-items-center tw-gap-3 tw-mr-4">
        <img src="{{AssetUrlPrefix}}/img/logo.svg" alt="Forkana" class="tw-h-6 tw-w-6 tw-shrink-0" />
        <p class="tw-text-sm tw-text-neutral-600">
          &copy; <span id="year">2025</span> Forkana.
        </p>
      </div>

      <!-- Right: links -->
      <nav aria-label="Footer" class="tw-flex tw-flex-wrap tw-items-center tw-gap-x-10 tw-gap-y-2">
        <a href="/terms" class="tw-text-sm tw-text-indigo-600 hover:tw-underline focus:tw-outline-none focus:tw-ring-2 focus:tw-ring-indigo-500 tw-rounded">Terms</a>
        <a href="/privacy" class="tw-text-sm tw-text-indigo-600 hover:tw-underline focus:tw-outline-none focus:tw-ring-2 focus:tw-ring-indigo-500 tw-rounded">Privacy</a>
        <a href="/security" class="tw-text-sm tw-text-indigo-600 hover:tw-underline focus:tw-outline-none focus:tw-ring-2 focus:tw-ring-indigo-500 tw-rounded">Security</a>
        <a href="/community-notes" class="tw-text-sm tw-text-indigo-600 hover:tw-underline focus:tw-outline-none focus:tw-ring-2 focus:tw-ring-indigo-500 tw-rounded">Community notes</a>
        <a href="/contact" class="tw-text-sm tw-text-indigo-600 hover:tw-underline focus:tw-outline-none focus:tw-ring-2 focus:tw-ring-indigo-500 tw-rounded">Contact Forkana</a>
        <a href="/about" class="tw-text-sm tw-text-indigo-600 hover:tw-underline focus:tw-outline-none focus:tw-ring-2 focus:tw-ring-indigo-500 tw-rounded">About</a>
      </nav>

    </div>
  </div>
</footer>
