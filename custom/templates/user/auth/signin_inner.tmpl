<div class="tw-flex tw-flex-col tw-items-center tw-gap-[60px] tw-w-full">
	{{if or (not .LinkAccountMode) (and .LinkAccountMode .LinkAccountModeSignIn)}}
	{{template "base/alert" .}}
	{{end}}
	
	{{/* Logo section */}}
	<div class="tw-flex tw-flex-col tw-items-center tw-gap-[80px]">
		<div class="tw-w-[124px] tw-h-[122px]">
			<img class="logo" width="124" height="122" src="{{AssetUrlPrefix}}/img/logo.svg" alt="{{ctx.Locale.Tr "logo"}}">
		</div>
	</div>

	<div class="tw-flex tw-flex-col tw-gap-[12px] tw-items-start tw-w-full">
		<div class="tw-flex tw-flex-col tw-gap-[16px] tw-items-start tw-w-full">
			{{/* Title */}}
			<div class="tw-w-full tw-text-center tw-text-[20px] tw-font-bold tw-leading-[32px] tw-text-black">
				{{if .LinkAccountMode}}
					{{ctx.Locale.Tr "auth.oauth_signin_title"}}
				{{else}}
					Sign in to Forkana
				{{end}}
			</div>

			<div class="tw-flex tw-flex-col tw-gap-[24px] tw-items-center tw-w-full">
				{{/* Main form container */}}
				<div class="tw-bg-white tw-border tw-border-solid tw-border-[rgba(209,217,224,0.7)] tw-rounded-[12px] tw-p-[24px] tw-flex tw-flex-col tw-gap-[30px] tw-w-full">
					{{if .EnablePasswordSignInForm}}
					<form class="tw-flex tw-flex-col tw-gap-[25px] tw-w-full" action="{{.SignInLink}}" method="post">
						{{.CsrfTokenHtml}}
						
						{{/* Username/Email field */}}
						<div class="tw-flex tw-flex-col tw-gap-[4px] tw-w-full {{if and (.Err_UserName) (or (not .LinkAccountMode) (and .LinkAccountMode .LinkAccountModeSignIn))}}error{{end}}">
							<label for="user_name" class="tw-text-[14px] tw-font-semibold tw-leading-[20px] tw-text-[#1f2328]">
								{{ctx.Locale.Tr "home.uname_holder"}}
							</label>
							<input 
								id="user_name" 
								type="text" 
								name="user_name" 
								value="{{.user_name}}" 
								placeholder="Type your username or email address"
								autofocus 
								required 
								tabindex="1"
								class="tw-bg-white tw-border tw-border-[#d1d9e0] tw-border-solid tw-rounded-[6px] tw-px-[8px] tw-h-[32px] tw-text-[14px] tw-text-[#59636e] tw-leading-[20px] tw-w-full focus:tw-outline-none focus:tw-border-[#4e40fa]"
							>
						</div>

						{{if or (not .DisablePassword) .LinkAccountMode}}
						{{/* Password field */}}
						<div class="tw-flex tw-flex-col tw-gap-[4px] tw-w-full {{if and (.Err_Password) (or (not .LinkAccountMode) (and .LinkAccountMode .LinkAccountModeSignIn))}}error{{end}}">
							<div class="tw-flex tw-justify-between tw-items-start tw-w-full">
								<label for="password" class="tw-text-[14px] tw-font-semibold tw-leading-[20px] tw-text-[#1f2328]">
									{{ctx.Locale.Tr "password"}}
								</label>
								<a href="{{AppSubUrl}}/user/forgot_password" tabindex="4" class="tw-text-[12px] tw-font-semibold tw-leading-[20px] tw-text-[#4e40fa] tw-text-right">
									{{ctx.Locale.Tr "auth.forgot_password"}}
								</a>
							</div>
							<input 
								id="password" 
								name="password" 
								type="password" 
								value="{{.password}}" 
								placeholder="Type your password"
								autocomplete="current-password" 
								required 
								tabindex="2"
								class="tw-bg-white tw-border tw-border-[#d1d9e0] tw-border-solid tw-rounded-[6px] tw-px-[8px] tw-h-[32px] tw-text-[14px] tw-text-[#59636e] tw-leading-[20px] tw-w-full focus:tw-outline-none focus:tw-border-[#4e40fa]"
							>
						</div>
						{{end}}

						{{/* Remember me 
							{{if not .LinkAccountMode}}
							<div class="tw-inline-flex">
								<label class="tw-flex tw-items-center tw-gap-2 tw-cursor-pointer">
									<input name="remember" type="checkbox" tabindex="5" class="tw-w-4 tw-h-4">
									<span class="tw-text-[14px] tw-text-[#1f2328]">{{ctx.Locale.Tr "auth.remember_me"}}</span>
								</label>
							</div>
							{{end}}
						*/}}

						{{template "user/auth/captcha" .}}

						{{/* Sign in button */}}
						<button type="submit" class="tw-bg-[#4e40fa] tw-border tw-border-[rgba(31,35,40,0.15)] tw-border-solid tw-rounded-[6px] tw-px-[16px] tw-py-[10px] tw-flex tw-items-center tw-justify-center tw-gap-[8px] tw-w-full tw-text-white tw-text-[14px] tw-font-semibold tw-leading-[20px] hover:tw-bg-[#4230d8] tw-cursor-pointer" tabindex="3">
							{{if .LinkAccountMode}}
								{{ctx.Locale.Tr "auth.oauth_signin_submit"}}
							{{else}}
								{{ctx.Locale.Tr "sign_in"}}
							{{end}}
						</button>
					</form>
					{{end}}{{/*if .EnablePasswordSignInForm*/}}
					
					{{/* OAuth methods */}}
					{{$showOAuth2Methods := or .OAuth2Providers .EnableOpenIDSignIn .EnableSSPI}}
					{{if and $showOAuth2Methods .EnablePasswordSignInForm}}
						<div class="tw-relative tw-text-center tw-my-4">
							<span class="tw-bg-white tw-px-4 tw-relative tw-z-10 tw-text-[#59636e]">{{ctx.Locale.Tr "sign_in_or"}}</span>
							<div class="tw-absolute tw-top-1/2 tw-left-0 tw-right-0 tw-h-px tw-bg-[#d1d9e0]"></div>
						</div>
					{{end}}
					{{if $showOAuth2Methods}}
						{{template "user/auth/oauth_container" .}}
					{{end}}
				</div>

				{{/* Registration button */}}
				{{if .ShowRegistrationButton}}
				<a href="{{AppSubUrl}}/user/sign_up" class="tw-bg-[#f6f8fa] tw-border tw-border-[#d1d9e0] tw-border-solid tw-rounded-[6px] tw-px-[12px] tw-py-[6px] tw-flex tw-items-center tw-justify-center tw-gap-[8px] tw-w-full tw-text-[14px] tw-font-semibold tw-leading-[20px] tw-text-[#25292e] hover:tw-bg-[#eaeef2] tw-no-underline">
					<span>{{ctx.Locale.Tr "auth.need_account"}}</span>
					<span class="tw-font-normal tw-text-[#4e40fa]">{{ctx.Locale.Tr "auth.sign_up_now"}}</span>
				</a>
				{{end}}

				{{/* Passkey auth
					{{if .EnablePasskeyAuth}}
						{{template "user/auth/webauthn_error" .}}
						<a class="signin-passkey tw-text-[#4e40fa] tw-text-[14px] tw-font-semibold">
							{{ctx.Locale.Tr "auth.signin_passkey"}}
						</a>
					{{end}}
				*/}}
			</div>
		</div>
	</div>
</div>
